
{
  "rules": {
    "Users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "Appointments": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        ".indexOn": [
          "AppointmentDate",
          "ClientID"
        ],
        "$appointmentId": {
          ".write": "!data.exists() && newData.exists() && newData.child('BookedByUserID').val() === auth.uid || data.exists() && newData.exists()"
        }
      }
    },
    "Clients": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        ".indexOn": [
          "ClientEmail",
          "ClientName"
        ],
        "$clientId": {
          ".write": "!data.exists() && newData.exists() && newData.child('CreatedByUserID').val() === auth.uid || data.exists() && newData.exists()"
        }
      }
    }
  }
}
