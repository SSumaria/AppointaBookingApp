
{
  "rules": {
    "Users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "Appointments": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid === $uid",
        "$appointmentId": {
          ".write": "!data.exists() && newData.exists() && newData.child('BookedByUserID').val() === $uid"
        }
      }
    },
    "Clients": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid === $uid",
        ".indexOn": [
          "ClientEmail"
        ],
        "$clientId": {
          ".write": "!data.exists() && newData.exists() && newData.child('CreatedByUserID').val() === $uid"
        }
      }
    },
    "UserPreferences": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "workingHours": {
          ".write": "auth != null && auth.uid === $uid",
           ".validate": "!newData.exists() || newData.hasChildren(['monday', 'tuesday', 'wednesday', 'thursday', 'friday', 'saturday', 'sunday'])"
        },
        "googleCalendar": {
           ".write": "newData.hasChildren(['integrated', 'tokens', 'writtenBy']) && newData.child('writtenBy').val() === $uid"
        }
      }
    }
  }
}

    