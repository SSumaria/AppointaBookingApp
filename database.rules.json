{
  "rules": {
    "Users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "Appointments": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        ".indexOn": [
          "AppointmentDate",
          "ClientID"
        ],
        "$appointmentId": {
          ".write": "!data.exists() && newData.exists() && newData.child('BookedByUserID').val() === auth.uid"
        }
      }
    },
    "Clients": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        ".indexOn": [
          "ClientEmail",
          "ClientName"
        ],
        "$clientId": {
          ".write": "!data.exists() && newData.exists() && newData.child('CreatedByUserID').val() === auth.uid"
        }
      }
    },
    "UserPreferences": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "workingHours": {
          ".write": "auth != null && auth.uid === $uid",
           ".validate": "newData.val() === null || newData.hasChildren(['monday', 'tuesday', 'wednesday', 'thursday', 'friday', 'saturday', 'sunday'])"
        },
        "googleCalendar": {
           ".write": "newData.hasChildren(['integrated', 'tokens', 'writtenBy']) && newData.child('writtenBy').val() === $uid"
        }
      }
    }
  }
}
