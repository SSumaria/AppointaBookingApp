
{
  "rules": {
    "Users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "Appointments": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        ".indexOn": [
          "AppointmentDate",
          "ClientID"
        ],
        "$appointmentId": {
          "validate": "newData.hasChildren(['AppointmentID', 'ClientID', 'ServiceProcedure', 'AppointmentDate', 'AppointmentStartTime', 'AppointmentEndTime', 'BookingStatus', 'BookedByUserID']) && newData.child('BookedByUserID').val() === auth.uid"
        }
      }
    },
    "Clients": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        ".indexOn": [
          "ClientEmail",
          "ClientName"
        ],
        "$clientId": {
           "validate": "newData.hasChildren(['ClientID', 'ClientName', 'ClientEmail', 'ClientContact', 'CreateDate', 'CreateTime', 'CreatedByUserID']) && newData.child('CreatedByUserID').val() === auth.uid"
        }
      }
    }
  }
}
