{
  "rules": {
    "UserPreferences": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "Appointments": {
      "$serviceProviderId": {
        ".read": true,
        ".write": "auth != null && auth.uid == $serviceProviderId",
        ".indexOn": ["AppointmentDate", "ClientID"],
        "$appointmentId": {
          ".write": "(auth != null && auth.uid == $serviceProviderId) || (newData.exists() && !data.exists() && newData.child('BookedByUserID').val() == $serviceProviderId)"
        }
      }
    },
    "Clients": {
      "$serviceProviderId": {
        ".read": true,
        ".write": "auth != null && auth.uid == $serviceProviderId",
        ".indexOn": ["ClientEmail","ClientName"],
        "$clientId": {
          ".write": "(auth != null && auth.uid == $serviceProviderId) || (newData.exists() && !data.exists() && newData.child('CreatedByUserID').val() == $serviceProviderId)"
        }
      }
    }
  }
}